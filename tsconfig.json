{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "lib": ["es6", "dom", "es5"],
    "jsx": "react",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "allowSyntheticDefaultImports": false,
    "rootDir": "./src"
  },
  "exclude": ["node_modules", "dist", "coverage", "webpack", "jest", "src/setupTests.ts"],
  "include": ["./src/**/*"]
}
